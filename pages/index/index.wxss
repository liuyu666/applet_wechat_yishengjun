.swiper{
  height: 320rpx;
  width: 100%;
}
.move_pic{
  height: 100%;
  width: 100%;
}
.clock_click{
  color: lightskyblue;
  font-size: 16px;
  position: absolute;
  right: 20px;
  top: 10px; 
}
.step_box,.english_box{
  width: 100%;
  position: relative;
}

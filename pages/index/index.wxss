  padding-left: 4px;
  height: 30px;
  background:#e0e0e0; 
  line-height: 30px;
  font-size: 12px;
}
.bg_line1{
  background:lightgray;
  height: 2px;
}
.step_num{
  font-size: 26px;
  padding: 20rpx
}
.english_word{
  padding: 20rpx
}
.step_word,.english_num{
  display: inline-block;
  padding: 0 20rpx 20rpx;
}
.step_com,.english_click{
  position: absolute;
  right: 30rpx;
  top: 90rpx;
  line-height: 0rpx;
  font-size: 12px;

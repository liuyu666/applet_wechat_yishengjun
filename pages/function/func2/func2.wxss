/* pages/function/func2/func2.wxss */
view{
  display: inline-block;
}
.box{
  width: 48%;
  position: relative;
  border: 1rpx solid gray;
  padding: 4rpx;
}
.pic_goods{
  width: 100%;
  height: 320rpx;
}
.price_box{
  width: 100%;
}
.price{
  display: inline-block;
  padding: 4rpx 0 4rpx 10rpx;
  width: 45%;
  color: red;
}
.num_box{
  display: inline-block;
  padding: 4rpx 0 4rpx 10rpx;
  width: 45%;
}
.num{
  text-align: center;
  line-height: 1rem;
  height: 1rem;
  width: 1rem;
  border: 1rpx solid lightgreen;
}
.left{
  text-align: center;
  line-height: 1rem;
  height: 1rem;
  width: 1rem;
  border: 1rpx solid lightgreen;
  border-top-left-radius: 0.5rem;
  border-bottom-left-radius: 0.5rem;

}
.right{
  text-align: center;
  line-height: 1rem;
  height: 1rem;
  width: 1rem;
  border: 1rpx solid lightgreen;
  border-top-right-radius: 0.5rem;
  border-bottom-right-radius: 0.5rem;
}
.add{
  color: gray;
  width: 100%;
  /* background-color: orange; */
  border-top: 1rpx solid lightgray;
  border-bottom: 1rpx solid lightgray;
  position: relative;
}
.add_right{
  width: 1rem;
  height: 1rem;
  position: absolute;
  right: 4rpx;
  top: 4rpx;
}
.button{
  margin-top:4rpx; 
  float: right
}